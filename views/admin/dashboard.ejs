            <% } else if (app.status === 'errored') { %>
              <span class="inline-flex items-center gap-1 text-xs font-medium px-2.5 py-1 rounded-full bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400"><span class="w-1.5 h-1.5 bg-red-500 rounded-full"></span>Errored</span>
            <% } else { %>
              <span class="inline-flex items-center gap-1 text-xs font-medium px-2.5 py-1 rounded-full bg-amber-100 dark:bg-amber-900/30 text-amber-700 dark:text-amber-400"><span class="w-1.5 h-1.5 bg-amber-500 rounded-full"></span><%= app.status %></span>
