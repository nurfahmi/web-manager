                  <button onclick="appAction('<%= app.name %>', 'stop')" class="p-1.5 rounded-lg hover:bg-red-100 dark:hover:bg-red-900/30 text-red-600 dark:text-red-400 transition-colors" title="Stop">
                    <i class="bi bi-stop-fill"></i>
                  </button>
                <% } %>
              <% } %>
              <a href="/admin/app/<%= app.name %>/logs" class="p-1.5 rounded-lg hover:bg-brand-100 dark:hover:bg-brand-900/30 text-brand-600 dark:text-brand-400 transition-colors" title="Logs">
                <i class="bi bi-journal-text"></i>
