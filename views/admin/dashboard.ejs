<script src="/js/dashboard.js"></script>
<script>
let appTermDir = '';
const appTermHistory = [];
let appTermHistIdx = -1;

function openAppTerminal(name, dir) {
  appTermDir = dir;
  document.getElementById('appTermTitle').textContent = name;
  document.getElementById('appTermPath').textContent = dir;
  document.getElementById('appTermOutput').textContent = dir + '\n\n';
  document.getElementById('appTermInput').value = '';
  document.getElementById('appTerminalModal').classList.remove('hidden');
  document.getElementById('appTermInput').focus();
}

function closeAppTerminal() {
  document.getElementById('appTerminalModal').classList.add('hidden');
}

document.getElementById('appTermInput').addEventListener('keydown', async function(e) {
  if (e.key === 'ArrowUp') {
    e.preventDefault();
    if (appTermHistIdx < appTermHistory.length - 1) { appTermHistIdx++; this.value = appTermHistory[appTermHistory.length - 1 - appTermHistIdx]; }
    return;
  }
  if (e.key === 'ArrowDown') {
    e.preventDefault();
    if (appTermHistIdx > 0) { appTermHistIdx--; this.value = appTermHistory[appTermHistory.length - 1 - appTermHistIdx]; } else { appTermHistIdx = -1; this.value = ''; }
    return;
  }
  if (e.key === 'Escape') { closeAppTerminal(); return; }
  if (e.key !== 'Enter') return;

  const cmd = this.value.trim();
  if (!cmd) return;
  appTermHistory.push(cmd);
  appTermHistIdx = -1;
  this.value = '';

  const output = document.getElementById('appTermOutput');
  output.textContent += '$ ' + cmd + '\n';
  output.textContent += 'Running...\n';
  output.scrollTop = output.scrollHeight;

  // Prepend cd to app dir
  const fullCmd = appTermDir ? 'cd "' + appTermDir + '" && ' + cmd : cmd;
  const csrf = document.getElementById('csrfToken').value;

  try {
    const res = await fetch('/admin/api/terminal', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json', 'CSRF-Token': csrf },
      body: JSON.stringify({ command: fullCmd })
    });
    const data = await res.json();
    output.textContent = output.textContent.replace('Running...\n', '');
    output.textContent += (data.output || 'Done') + '\n\n';
  } catch (err) {
    output.textContent = output.textContent.replace('Running...\n', '');
    output.textContent += 'Error: ' + err.message + '\n\n';
  }
  output.scrollTop = output.scrollHeight;
});
</script>
