              <% if (user.role === 'SUPER_ADMIN') { %>
              <button onclick="toggleWatch('<%= app.name %>', this)" class="p-1.5 rounded-lg transition-colors <%= app.watch ? 'bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400' : 'hover:bg-gray-100 dark:hover:bg-gray-800 text-gray-400' %>" title="<%= app.watch ? 'Watch ON — click to disable' : 'Watch OFF — click to enable' %>">
                <i class="bi bi-eye<%= app.watch ? '-fill' : '' %>"></i>
              </button>
              <button onclick="openAppTerminal('<%= app.name %>', '<%= app.cwd || '' %>')" class="p-1.5 rounded-lg hover:bg-cyan-100 dark:hover:bg-cyan-900/30 text-cyan-600 dark:text-cyan-400 transition-colors" title="Terminal">
                <i class="bi bi-terminal"></i>
