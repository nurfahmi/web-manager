        <% apps.forEach(app => { %>
        <tr class="border-b border-gray-100 dark:border-gray-800 hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors" data-app="<%= app.name %>">
          <td class="px-5 py-3">
            <div class="font-semibold"><%= app.name %></div>
            <div class="text-xs text-gray-400">PID: <%= app.pid %></div>
          </td>
          <td class="px-5 py-3">
            <% if (app.status === 'online') { %>
