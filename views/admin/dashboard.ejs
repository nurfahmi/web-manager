    <div class="flex items-center justify-between">
      <div>
        <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">Uptime</p>
        <p class="text-2xl font-bold mt-1" id="stat-uptime"><%= formatUptime(metrics.uptime) %></p>
      </div>
      <div class="w-10 h-10 bg-green-100 dark:bg-green-900/30 rounded-xl flex items-center justify-center">
        <i class="bi bi-clock-history text-green-600 dark:text-green-400"></i>
      </div>
    </div>
  </div>
  <div class="bg-white dark:bg-gray-900 rounded-xl border border-gray-200 dark:border-gray-800 p-5">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">CPU</p>
        <p class="text-2xl font-bold mt-1" id="stat-cpu"><%= metrics.cpu.usage %>%</p>
        <p class="text-xs text-gray-400 mt-0.5"><%= metrics.cpu.cores %> cores</p>
      </div>
