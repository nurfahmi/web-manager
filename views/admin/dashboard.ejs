      <span class="text-xs text-gray-400" id="lastRefresh">Auto-refresh: 15s</span>
      <button onclick="refreshAll()" class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors text-gray-500" title="Refresh">
        <i class="bi bi-arrow-clockwise"></i>
      </button>
      <% if (user.role === 'SUPER_ADMIN') { %>
      <button onclick="document.getElementById('addAppModal').classList.remove('hidden')" class="px-3 py-1.5 bg-brand-600 hover:bg-brand-700 text-white text-sm font-medium rounded-lg transition-colors">
        <i class="bi bi-plus-lg mr-1"></i>Add App
