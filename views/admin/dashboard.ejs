    <div class="flex items-center justify-between">
      <div>
        <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">Disk</p>
        <p class="text-2xl font-bold mt-1" id="stat-disk"><%= metrics.disk.percent %>%</p>
        <p class="text-xs text-gray-400 mt-0.5" id="stat-disk-detail"><%= formatBytes(metrics.disk.used) %> / <%= formatBytes(metrics.disk.total) %></p>
      </div>
      <div class="w-10 h-10 bg-cyan-100 dark:bg-cyan-900/30 rounded-xl flex items-center justify-center">
        <i class="bi bi-hdd text-cyan-600 dark:text-cyan-400"></i>
      </div>
    </div>
  </div>
</div>

<!-- System Info -->
